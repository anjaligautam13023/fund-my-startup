            <li class="nav-item active"><a href="/" class="nav-link text-uppercase font-weight-bold">Home <span
                  class="sr-only">(current)</span></a></li>
            {{#if name}}
            {{#if (eq user_type "Investor")}}<li class="nav-item"><a href="/profile?Id={{id}}"
                class="nav-link text-uppercase font-weight-bold">
                My profile</a></li>
            {{else}}
            <li class="nav-item"><a href="/about" class="nav-link text-uppercase font-weight-bold">
                My products</a></li>
            {{/if}}
            {{#if (eq user_type "Investor")}}

            <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold"></a></li>
            {{else}}
            <li class="nav-item"><a href="/profile?Id={{id}}" class="nav-link text-uppercase font-weight-bold">My
                profile</a></li>
            {{/if}}
            {{else}}
            <li style="margin-left: 40%;"></li>
            {{/if}}
            <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold"></a></li>
            <li class="nav-item"><a href="#" class="nav-link text-uppercase font-weight-bold"></a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
            {{#if name}}
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-5"> </a></li>
              <li class="nav-item"><a href="/logout" class="nav-link ml-5">logout</a></li>
              <li class="nav-item"><a href="#" class="nav-link  ml-3"> </a></li>
            {{else}}
            <li class="nav-item"><a href="/contact" class="nav-link ml-5">login/signup</a></li>
            <li class="nav-item"><a href="#" class="nav-link  ml-3"> </a></li>
             {{/if}}
            <a href="/update?Id={{id}}">
           
             
              <li><i class='fas fa-user-circle' style='font-size:38px;'></i></li>
            </a>
            
          </ul>
        </div>
      </nav>
    </header>
    <section class="slider_section ">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4 offset-md-1">
            <div class="detail-box mt-5">
              <h5><b>welcome {{name}}</b></h5>

              <h1>
                <span> Fund</span> <br>
                My <br>
                Startup
              </h1>
              <p>
                If opportunity does not <b>knock</b>, build a <b>Door</b>.
              </p>
              <div class="btn-box">
                <a href="#contact" class="">
                  contact us
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- end slider section -->
  </div>

  <!-- find section -->

  {{#if name}}


  <section class="client_section layout_padding"
    style="background-image:url(https://i.makeagif.com/media/1-19-2019/sK-FhV.gif);background-size:1900px">
    <div class="container-fluid">
      <div class="heading_container">
        <h2>
          Top Investor
        </h2>
      </div>
      <div class="container">
        {{log topinvestor}}
        {{#each topinvestor}}


        <div class="box mt-5 p-3" style="border: solid 2px;padding 10px;">
          <div class="row">
            <div class="col-4">
              <img src="{{this.profile}}" height="200px" width="250px" style="border-radius: 7rem;">
            </div>

            <a href="/profile?Id={{this.id}}">
              <div class="detail-box col-8">
                <h5>
                  {{this.user_name}}

                </h5>
                <p style="font-size: small;">{{this.tagline}}</p>
                <hr>
                <p style="font-size: medium;">Email:{{this.Email}}
                </p>

                <p style="font-size: medium;">Location:{{this.location}}
                </p>
                <p style="font-size: medium;">No of requests:{{this.top}}
                </p>
              </div>
            </a>

          </div>
        </div>

        {{/each}}
      </div>

    </div>
  </section>


  <section class="sale_section layout_padding-bottom">
    {{#if (eq user_type "Investor")}}
    <div class="heading_container">
      <h2>
        Entreprenaur
      </h2>
      {{else}}
      <div class="heading_container">
        <h2>
          Investors
        </h2>
        {{/if}}

        <div class="container">

          <div class="row">
            {{#each db_data}}

            <a href="profile?Id={{this.id}}">
              <div class="card col-3 mx-4 ml-5 mt-3">
                <img src="{{this.profile}}" alt="update your profile" height="200px" width="250px">
                <h6 id="id1">{{ this.user_name}}</h6>
                <p style="font-size: small;">({{this.tagline}})</p>
                <hr>
                <p class="title" style="font-size: small;">{{this.Email}}</p>
                <p><button>view profile</button></p>
              </div>
            </a>
            {{/each}}
          </div>
        </div>
      </div>

  </section>
  {{/if}}
  <section class="contact_section ">
    <div class="container">
      <div class="heading_container">
        <h2>
          Get In Touch
        </h2>
      </div>
    </div>

  </section>

  <section class="info_section " id="contact">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="info_contact">
            <h5>
              About
            </h5>
            <div>
              <div class="img-box">
                <img src="images/location.png" width="18px" alt="">
              </div>
              <p>
                Address
              </p>
            </div>
            <div>
              <div class="img-box">
                <img src="images/phone.png" width="12px" alt="">
              </div>
              <p>
                +01 1234567890
              </p>
            </div>
            <div>
              <div class="img-box">
                <img src="images/mail.png" width="18px" alt="">
              </div>
              <p>
                anjaligautam@gmail.com
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_info">
            <h5>
              Information
            </h5>
            <p>
              This page is designed to help entreprenaur and investor to connect and buid their buissness.
            </p>
          </div>
        </div>

        <div class="col-md-3">
          <div class="info_form ">
            <h5>
              Newsletter
            </h5>
            <form action="">
              <input type="email" placeholder="Enter your email">
              <button>
                Subscribe
              </button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </section>

